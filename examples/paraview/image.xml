<?xml version="1.0"?>
<simulation name="image" language="c" xmlns="http://damaris.gforge.inria.fr/damaris/model">
        <architecture>
                <domains count="1" />
                <dedicated cores="2" nodes="0" />
                <buffer name="damaris-buffer" size="150000000" />
                <queue  name="damaris-queue" size="100" />
        </architecture>
        <data>
                <parameter name="WIDTH"  type="int" value="100" />
                <parameter name="HEIGHT" type="int" value="100" />
                <parameter name="DEPTH"  type="int" value="100" />
                <parameter name="size"	 type="int" value="4"  />

                <layout name="cells"  type="double" dimensions="WIDTH,HEIGHT,DEPTH/size"
                        global="WIDTH,HEIGHT,DEPTH" ghosts="0:0,0:0,0:0" />
                <layout name="rmeshX" type="float" dimensions="WIDTH" global="WIDTH" ghosts="0:0" />
                <layout name="rmeshY" type="float" dimensions="HEIGHT" global="HEIGHT" ghost="0:0" />
                <layout name="rmeshZ" type="float" dimensions="DEPTH/size" global="DEPTH" ghost="0:0" />

                <mesh name="mesh" type="rectilinear" topology="3">
                        <coord name="coord/x" label="x"/>
                        <coord name="coord/y" label="y"/>
                        <coord name="coord/z" label="z"/>
                </mesh>

                <group name="coord">
                        <variable name="x" layout="rmeshX" visualizable="false" time-varying="false"  />
                        <variable name="y" layout="rmeshY" visualizable="false" time-varying="false"  />
                        <variable name="z" layout="rmeshZ" visualizable="false" time-varying="false"  />
                </group>

                <variable name="pressure" type="scalar" layout="cells" mesh="mesh" centering="nodal" />
        </data>
        <actions>
        </actions>
        <paraview>
            <script>/home/hadi/Damaris/DamarisDevHadi/examples/paraview/image.py</script>
        </paraview>
        <log FileName="log/damaris" RotationSize="5" LogFormat="[%TimeStamp%]: %Message%" LogLevel="info" />
</simulation>
