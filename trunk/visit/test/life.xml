		<home>/home/mdorier/Work/Visu2/visit/python/2.6.4/linux-i686_gcc-4.6</home>
	</python>
	<visit>
		<path>/home/mdorier/Work/Visu2/visit2.5.0/src</path>
	</visit>
</simulation>
