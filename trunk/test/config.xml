<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<simulation name="my lovely simulation" language="fortran">
	<nodes>
		<cores  count="16"/>
		<buffer name="my sweet shared memory segment" size="67108864"/>
		<queue  name="my cute message queue" size="100" />
	</nodes>
	<data>
		<parameter name="x" type="int" value="42" />

		<layout name="my layout" type="float" dimensions="64,16,2" />

		<group name="info" enabled="yes">
			<layout name="str layout" type="char" dimensions="128" />
			<variable name="my string" layout="str layout"/>
		</group>

		<variable name="my variable" layout="my layout"> this is an example of metadata </variable>
	</data>
	<actions>
		<event name="my event" action="my_function" using="hello.so"/>
	</action>
</simulation>
