<?xml version="1.0"?>
<simulation name="fractal" language="CPP" xmlns="http://damaris.gforge.inria.fr/Damaris/Model">
	<architecture>
		<cores  count="4">
			<clients count="4"/>
		</cores>
		<buffer name="buffer" size="16777216" />
		<queue  name="queue" size="100" />
	</architecture>
	<data>
		<parameter name="w" type="int" value="640" />
		<parameter name="h" type="int" value="480" />

		<layout name="plan" type="char" dimensions="w,h" />
		<group name="images">
			<variable name="julia" layout="plan"> Julia set </variable>
		</group>
	</data>
	<actions>
		<event  name="say_hello_from_cpp"   action="hello_world" library="libhello.so" />
		<script name="draw_from_python"     file="draw_no_server.py"  language="python" scope="core" />
		<script name="clean_from_python"    file="clean.py" language="python" scope="core" />
	</actions>
</simulation>
